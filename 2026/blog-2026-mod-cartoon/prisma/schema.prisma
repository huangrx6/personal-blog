datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Post status enum
enum PostStatus {
  DRAFT
  PUBLISHED
  OFFLINE
}

// Category model
model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?  @db.VarChar(500)
  color       String   @default("#0EA5E9")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  posts       Post[]
}

model Post {
  id        String     @id @default(cuid())
  title     String
  slug      String     @unique
  content   String     @db.LongText
  status    PostStatus @default(DRAFT)
  coverImage String?   // URL to cover image
  
  authorId  String
  author    User       @relation(fields: [authorId], references: [id])
  
  categoryId String?
  category   Category?  @relation(fields: [categoryId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@fulltext([title, content])
}

// Site-wide settings (singleton pattern - only one row)
model SiteSettings {
  id                  String   @id @default("default")
  
  // Site Info
  siteName            String   @default("Blog 2026")
  siteDescription     String   @default("A creative personal blog") @db.VarChar(500)
  author              String   @default("")
  
  // Social Links
  githubUrl           String   @default("")
  twitterUrl          String   @default("")
  emailAddress        String   @default("")
  weiboUrl            String   @default("")
  resumeUrl           String   @default("")
  
  // Appearance
  fontStyle           String   @default("system")  // "system" | "comic" | "zcool" | "mashan" | "longcang"
  primaryColor        String   @default("#0EA5E9")
  mouseFollowEnabled  Boolean  @default(true)
  cursorStyle         String   @default("blob")  // "blob" | "sparkle" | "rainbow" | "trail"
  highPerformanceMode Boolean  @default(false)
  
  // Feature Toggles
  commentsEnabled     Boolean  @default(false)
  showReadingTime     Boolean  @default(true)
  
  // -- About Page Configuration --
  
  // Hero Section
  aboutHeroTitle1      String   @default("不仅是")
  aboutHeroTitle2      String   @default("开发者")
  aboutHeroDescription String   @default("我是一名热衷于创造极致用户体验的全栈开发者。\n游走于设计与代码之间，构建既好用又好看的数字产品。") @db.VarChar(1000)
  
  // Skills Section (JSON list of {icon, title, desc})
  aboutSkills          Json?    
  
  // Vibe Section (JSON list of {icon, title, desc, color, rot})
  aboutVibeCards       Json?

  // Metadata
  updatedAt           DateTime @updatedAt
}

// Friend Links (Blogroll)
model FriendLink {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.VarChar(500)
  avatar      String?  @db.VarChar(1000)
  url         String
  active      Boolean  @default(true)
  
  // Style preference for the card (optional)
  style       String   @default("neo") // "neo" | "holo" | "retro"
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


// Media / File Assets
model Media {
  id        String   @id @default(cuid())
  filename  String
  url       String
  type      String   // mime type e.g. "image/jpeg"
  size      Int      // in bytes
  category  String   @default("general") // "general", "cover", "avatar", etc.
  
  // Optional metadata
  width     Int?
  height    Int?
  alt       String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
